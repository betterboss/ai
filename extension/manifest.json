{
  "manifest_version": 3,
  "name": "Mr. Better Boss - JobTread AI Assistant",
  "version": "2.0.0",
  "description": "AI business analyst for JobTread — profitability insights, cash flow aging, project health, and more. Built by Better Boss.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://app.jobtread.com/*",
    "https://api.jobtread.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mr. Better Boss ⚡"
  },
  "content_scripts": [
    {
      "matches": ["https://app.jobtread.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
